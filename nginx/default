
server {
        listen 80 default_server;
        listen [::]:80 default_server;
        server_name br;
        root /var/www/html/wordpress;
        location ~ \.php$ {
                        include                         /etc/nginx/snippets/fastcgi-php.conf;
                        fastcgi_pass                    127.0.0.1:9000;
                }

}
